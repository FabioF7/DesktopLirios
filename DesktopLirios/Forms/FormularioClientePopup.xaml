<Window x:Class="DesktopLirios.FormularioClientePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <StackPanel>
            <!-- Dados Pessoais -->
            <GroupBox Header="Dados Pessoais" Margin="0,0,0,12">
                <Grid Margin="8,4,8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nome -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Nome:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNome" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Margin="5,0,0,8"/>

                    <!-- Data Nascimento -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Dt. Nascimento:" VerticalAlignment="Center"/>
                    <DatePicker x:Name="dpDtNascimento" Grid.Row="1" Grid.Column="1" Margin="5,0,0,8"/>

                    <!-- Sexo -->
                    <Label Grid.Row="1" Grid.Column="2" Content="Sexo:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbSexo" Grid.Row="1" Grid.Column="2" Margin="60,0,0,8" Width="100">
                        <ComboBoxItem Content="Masculino" Tag="Masc"/>
                        <ComboBoxItem Content="Feminino" Tag="Fem"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- Contato e Endereço -->
            <GroupBox Header="Contato e Endereço" Margin="0,0,0,12" Height="161">
                <Grid Margin="8,4,8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Email -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Email:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEmail" Grid.Row="0" Grid.Column="1" Margin="5,0,0,8"/>

                    <!-- Celular -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Celular:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCelular" Grid.Row="1" Grid.Column="1" Margin="5,0,0,8"/>

                    <!-- CEP -->
                    <Label Grid.Row="2" Grid.Column="0" Content="CEP:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCEP" Grid.Row="2" Grid.Column="1" Margin="5,0,0,8"/>

                    <!-- Endereço -->
                    <Label Grid.Row="3" Grid.Column="0" Content="Endereço:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtEndereco" Grid.Row="3" Grid.Column="1" Margin="5,0,0,8"/>
                </Grid>
            </GroupBox>

            <!-- Situação Financeira -->
            <GroupBox Header="Situação Financeira" Margin="0,0,0,12">
                <Grid Margin="8,4,8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Limite -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Limite:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtLimite" Grid.Row="0" Grid.Column="1" Margin="5,0,0,8"/>

                    <!-- Valor Dívida -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Valor Dívida:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtValDivida" Grid.Row="1" Grid.Column="1" Margin="5,0,0,8"/>

                    <!-- Pagou -->
                    <Label Grid.Row="2" Grid.Column="0" Content="Pagou:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,8" Grid.RowSpan="2" Cursor="">
                        <TextBox x:Name="txtPagou" Width="100" Margin="0,0,8,0"/>
                        <Button x:Name="btnOk" Content="OK" Width="40" Click="btnOk_ClickAsync"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Outros Dados -->
            <GroupBox Header="Outros Dados" Margin="0,0,0,12">
                <Grid Margin="8,4,8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Indicação -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Indicação:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtIndicacao" Grid.Row="0" Grid.Column="1" Margin="5,0,0,8"/>

                    <!-- Bloqueado -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Bloqueado:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5,0,0,0">
                        <RadioButton x:Name="rbSim" Content="Sim" Margin="0,0,8,0"/>
                        <RadioButton x:Name="rbNao" Content="Não"/>
                    </StackPanel>

                    <!-- Inadimplente -->
                    <Label Grid.Row="2" Grid.Column="0" Content="Inadimplente:" VerticalAlignment="Center"/>
                    <CheckBox x:Name="cbSim" Grid.Row="2" Grid.Column="1" Content="Sim"/>
                </Grid>
            </GroupBox>

            <!-- Observações expandidas -->
            <GroupBox Header="Observações" Margin="0,0,0,16">
                <TextBox x:Name="txtObservacao"
                   Height="60"
                   AcceptsReturn="True"
                   TextWrapping="Wrap"
                   Margin="8"/>
            </GroupBox>

            <!-- Botões de ação -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0" >
                <Button x:Name="btnVenda" Content="Venda" MinWidth="80" Margin="0,0,8,0" Click="btnVenda_Click"/>
                <Button x:Name="btnHistorico" Content="Historico" MinWidth="80" Margin="0,0,8,0" Click="btnHistorico_Click"/>
                <Button x:Name="btnSalvar" Content="Salvar" MinWidth="80" Margin="0,0,8,0" Click="btnSalvar_ClickAsync"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>