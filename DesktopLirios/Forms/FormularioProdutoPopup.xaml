<Window x:Class="DesktopLirios.FormularioProdutoPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Produto"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">

    <Grid Margin="16">
        <StackPanel>
            <!-- Dados do Produto -->
            <GroupBox Header="Dados do Produto" Margin="0,0,0,12">
                <Grid Margin="8,4,8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Nome Produto -->
                    <Label Grid.Row="0" Grid.Column="0" Content="Nome Produto:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNome" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="5,0,0,8" Style="{StaticResource AccentTextBoxStyle}"/>

                    <!-- Origem -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Origem:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbOrigem" Grid.Row="1" Grid.Column="1" Margin="5,0,0,8" Width="140"/>

                    <!-- Categoria -->
                    <Label Grid.Row="1" Grid.Column="2" Content="Categoria:" VerticalAlignment="Center"/>
                    <ComboBox x:Name="cbCategoria" Grid.Row="1" Grid.Column="3" Margin="5,0,0,8" Width="140">
                        <ComboBoxItem Content="Masculino" Tag="Masc"/>
                        <ComboBoxItem Content="Feminino" Tag="Fem"/>
                    </ComboBox>

                    <!-- Código SKU -->
                    <Label Grid.Row="2" Grid.Column="0" Content="Código (SKU):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtSKU" Grid.Row="2" Grid.Column="1" Margin="5,0,0,8" Style="{StaticResource AccentTextBoxStyle}"/>

                    <!-- Código Barra -->
                    <Label Grid.Row="2" Grid.Column="2" Content="Código (Barra):" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtBarra" Grid.Row="2" Grid.Column="3" Margin="5,0,0,8" Width="140" Style="{StaticResource AccentTextBoxStyle}"/>

                    <!-- Preço Varejo -->
                    <Label Grid.Row="3" Grid.Column="0" Content="Preço Varejo:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtValor" Grid.Row="3" Grid.Column="1" Margin="5,0,0,8" Style="{StaticResource AccentTextBoxStyle}"/>

                    <!-- Custo Médio -->
                    <Label Grid.Row="3" Grid.Column="2" Content="Custo Médio:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCusto" Grid.Row="3" Grid.Column="3" Margin="5,0,0,8" Width="140" Style="{StaticResource AccentTextBoxStyle}"/>

                    <!-- Quantidade -->
                    <Label Grid.Row="4" Grid.Column="0" Content="Quantidade:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtQtd" Grid.Row="4" Grid.Column="1" Margin="5,0,0,8" Style="{StaticResource AccentTextBoxStyle}"/>
                </Grid>
            </GroupBox>

            <!-- Botões de ação -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button x:Name="btnEntradas" Content="Entradas" MinWidth="80" Click="btnEntradas_Click"/>
                <Button x:Name="btnVendas" Content="Vendas" MinWidth="80" Click="btnVendas_Click"/>
                <Button x:Name="btnHestoque" Content="Hist. Estoque" MinWidth="80" Click="btnHestoque_Click"/>
                <Button x:Name="btnSalvar" Content="Salvar" MinWidth="80" Click="btnSalvar_ClickAsync"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
