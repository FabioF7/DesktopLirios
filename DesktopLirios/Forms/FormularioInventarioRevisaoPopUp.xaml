<Window
    x:Class="DesktopLirios.FormularioInventarioRevisaoPopUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Revisão Inventário"
    WindowStartupLocation="CenterOwner"
    Background="{StaticResource BackgroundBrush}"
    Width="900"
    Height="600"
    ResizeMode="CanResizeWithGrip">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->

        <!-- DataGrid -->
        <DataGrid x:Name="grdRevisao"
                  Grid.Row="1"
                  Margin="0,0,0,16"
                  Height="Auto"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  FontSize="14"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="{StaticResource AlternateRowBrush}"
                  GridLinesVisibility="Horizontal"
                  SelectionMode="Single"
                  ItemsSource="{Binding ProdutoResponse}"
                  Background="{StaticResource BackgroundBrush}"
                  Foreground="{StaticResource PrimaryBrush}"/>

        <!-- Botões de ação -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnVoltar"
                    Content="Voltar"
                    MinWidth="100"
                    Style="{StaticResource ButtonStyle}"
                    Click="btnVoltar_Click"/>
            <Button x:Name="btnAprovar"
                    Content="Aprovar"
                    MinWidth="100"
                    Style="{StaticResource ButtonStyle}"
                    Click="btnAprovar_Click"/>
        </StackPanel>
    </Grid>
</Window>
