<Window x:Class="DesktopLirios.FormularioInventarioCadPopUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inventário"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}"
        Width="800"
        Height="600"
        ResizeMode="CanResizeWithGrip">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top: Pesquisa e ações -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,12">
                <Label Content="Pesquisa:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtProdutoInventario"
                         Width="300"
                         Style="{StaticResource AccentTextBoxStyle}"
                         VerticalAlignment="Center"
                         PreviewKeyDown="txtProdutoInventario_PreviewKeyDown"
                         TextChanged="txtProdutoInventario_TextChanged"/>
                <Button x:Name="btnPausa" Content="Pausar" MinWidth="80" Margin="8,0,0,0" Click="btnPausa_Click"/>
                <Button x:Name="btnRevisar" Content="Revisar" MinWidth="80" Margin="8,0,0,0" Click="btnRevisar_Click"/>
            </StackPanel>

            <!-- Sugestões -->
            <ListBox x:Name="lbProduto"
                     Grid.Row="1"
                     Style="{StaticResource {x:Type ListBox}}"
                     Width="300"
                     Visibility="Collapsed"
                     SelectionChanged="lbProduto_SelectionChanged"
                     Margin="0,0,0,12">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Value.Nome}" FontSize="14"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Tabela -->
            <DataGrid x:Name="grdTodos"
                      Grid.Row="2"
                      ItemsSource="{Binding InventarioDetalhesResponse}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      FontSize="14"
                      HeadersVisibility="Column"
                      AlternatingRowBackground="{StaticResource AlternateRowBrush}"
                      RowHeight="30"
                      GridLinesVisibility="Horizontal"
                      SelectionMode="Single"/>
        </Grid>
    </ScrollViewer>
</Window>
