<Page
    x:Class="DesktopLirios.PaginaProdutos"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{StaticResource BackgroundBrush}">

    <Page.Resources>
        <!-- Botão padrão do tema -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd"
                                        Property="Background"
                                        Value="{StaticResource SecondaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="bd"
                                        Property="Background"
                                        Value="{StaticResource DetailBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label padrão do tema -->
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}" />
            <Setter Property="Margin" Value="5,0,0,0" />
        </Style>

        <!-- TextBox padrão do tema -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Padding" Value="6" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="BorderBrush" Value="{StaticResource DetailBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Style.Triggers>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource SecondaryBrush}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Painel de filtros no topo -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10">
            <Label Content="Pesquisar:" VerticalAlignment="Center"/>
            <TextBox x:Name="txtPesquisar" Width="240" TextChanged="txtPesquisar_TextChanged"/>
            <Button x:Name="btnBuscar" Content="Pesquisar" MinWidth="100" Click="btnBuscar_Click"/>
        </StackPanel>

        <!-- Conteúdo central limitado ao frame -->
        <DataGrid x:Name="grdProdutos"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  FontSize="14"
                  HeadersVisibility="Column"
                  AlternatingRowBackground="#F5F5F5"
                  RowHeight="30"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  SelectionMode="Single"
                  GridLinesVisibility="Horizontal"
                  Margin="0,10,0,0"/>

        <!-- Painel de ações na base -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnCadastrar" Content="Cadastrar" MinWidth="100" Click="btnCadastrar_Click"/>
            <Button x:Name="btnEditar" Content="Editar" MinWidth="100" Click="btnEditar_Click"/>
            <Button x:Name="btnExcluir" Content="Excluir" MinWidth="100" Click="btnExcluir_Click"/>
            <Button x:Name="btnVisualizar" Content="Visualizar" MinWidth="100" Click="btnVisualizar_Click"/>
        </StackPanel>
    </Grid>
</Page>
