<Window x:Class="DesktopLirios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login – Sistema Lírios"
        Width="Auto" Height="Auto" SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Logo e título -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" >
            <Image Source="pack://application:,,,/Resources/LogoLirios.png"
             Width="150" Height="150"
             Margin="0,0,0,8"/>
            <TextBlock Text="Bem‑vindo ao Lírios"
                 FontSize="24"
                 FontWeight="Bold"
                 Foreground="{StaticResource PrimaryBrush}"
                 HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Cartão de login -->
        <Border Grid.Row="1"
            Width="320"
            Padding="24"
            CornerRadius="8"
            Background="White"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <!-- Usuário -->
                <TextBlock Text="Usuário" FontWeight="SemiBold" Margin="0,0,0,4"/>
                <TextBox x:Name="txUsuario" Height="30"
                 Style="{StaticResource AccentTextBoxStyle}" />

                <!-- Senha -->
                <TextBlock Text="Senha" FontWeight="SemiBold" Margin="0,12,0,4"/>
                <PasswordBox x:Name="txSenha" Height="30"
                     Style="{StaticResource AccentPasswordBoxStyle}" />

                <!-- Botão -->
                <Button x:Name="btnAcessar"
                Content="Acessar"
                Height="36"
                Margin="0,24,0,0"
                FontSize="16"
                FontWeight="Bold"
                Background="{StaticResource PrimaryBrush}"
                Foreground="White"
                IsDefault="True"
                Click="btnAcessar_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
