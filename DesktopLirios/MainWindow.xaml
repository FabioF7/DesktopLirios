<Window x:Class="DesktopLirios.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopLirios"
        mc:Ignorable="d"
        Title="Login" Height="384" Width="683">
    <Grid>
        <TextBox x:Name="txUsuario" HorizontalAlignment="Center" Margin="0,161,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontFamily="Calibri" Height="18"/>
        <PasswordBox x:Name="txSenha" HorizontalAlignment="Center" Margin="0,184,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lbUsuario" Content="Usuário:" HorizontalAlignment="Left" Margin="207,154,0,0" VerticalAlignment="Top" Height="32" Width="70" FontFamily="Calibri" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="lbSenha" Content="Senha:" HorizontalAlignment="Left" Margin="219,178,0,0" VerticalAlignment="Top" FontFamily="Calibri" FontSize="16" FontWeight="Bold" Width="58"/>
        <Button x:Name="btnAcessar" Content="Acessar" HorizontalAlignment="Center" Height="21" Margin="0,207,0,0" VerticalAlignment="Top" Width="86" Background="#FF318A12" FontWeight="Bold" FontFamily="Calibri" FontSize="14" Click="btnAcessar_Click" IsDefault="True"/>

    </Grid>
</Window>
