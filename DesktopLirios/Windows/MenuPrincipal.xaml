<Window x:Class="DesktopLirios.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu – Sistema Lírios"
        Width="1366" Height="768"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR -->
        <Border Grid.Column="0"
                Background="{StaticResource PrimaryBrush}"
                CornerRadius="0,8,8,0"
                Padding="16"
                Effect="{StaticResource ShadowEffect}">
            <StackPanel>
                <Image Source="pack://application:,,,/Resources/LogoLirios.png"
                       Width="100" Height="100"
                       Margin="0,0,0,24"
                       HorizontalAlignment="Center"/>

                <ListBox x:Name="MenuList"
                         Background="Transparent"
                         BorderThickness="0"
                         Foreground="White"
                         FontSize="16"
                         FontWeight="Bold"
                         SelectionChanged="MenuList_SelectionChanged"
                         SelectedIndex="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border x:Name="Bd"
                                                Background="Transparent"
                                                CornerRadius="4"
                                                Padding="8"
                                                Margin="0,4"
                                                Cursor="Hand">
                                            <ContentPresenter VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd"
                                                        Property="Background"
                                                        Value="{StaticResource SecondaryBrush}"/>
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Bd"
                                                        Property="Background"
                                                        Value="{StaticResource DetailBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <!-- Botões do menu -->
                    <ListBoxItem>Início</ListBoxItem>
                    <ListBoxItem>Agenda</ListBoxItem>
                    <ListBoxItem>Vendas</ListBoxItem>
                    <ListBoxItem>Clientes</ListBoxItem>
                    <ListBoxItem>Serviços</ListBoxItem>
                    <ListBoxItem>Produtos</ListBoxItem>
                    <ListBoxItem>Gastos</ListBoxItem>
                    <ListBoxItem>Entradas</ListBoxItem>
                    <ListBoxItem>Inventário</ListBoxItem>
                    <ListBoxItem>Relatórios</ListBoxItem>
                    <ListBoxItem>Outros</ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- CONTEÚDO -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- Top bar com saudação -->
            <Border Grid.Row="0"
                    Background="White"
                    Padding="12,8"
                    Effect="{StaticResource ShadowEffect}">
                <DockPanel>
                    <TextBlock Text="Bem‑vindo, [Usuário]"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource PrimaryBrush}"
                               DockPanel.Dock="Right"/>
                </DockPanel>
            </Border>

            <!-- Área principal -->
            <Frame x:Name="MainFrame"
                   Grid.Row="1"
                   NavigationUIVisibility="Hidden"
                   Background="{StaticResource BackgroundBrush}"/>
        </Grid>
    </Grid>
</Window>