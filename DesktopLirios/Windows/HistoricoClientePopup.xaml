<Window x:Class="DesktopLirios.HistoricoClientePopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Histórico do Cliente"
        Background="{StaticResource BackgroundBrush}"
        WindowStartupLocation="CenterOwner"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Estilo para o TextBlock em negrito -->
        <Style TargetType="TextBlock" x:Key="Negrito">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <!-- Estilo para o TextBox -->
        <Style TargetType="TextBox" x:Key="CaixaTexto">
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="21"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        <!-- Estilo para o Button -->
        <Style TargetType="Button" x:Key="Botao">
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Background" Value="#800080"/>
            <!-- Cor lilás -->
            <Setter Property="Foreground" Value="White"/>
            <!-- Texto branco -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <StackPanel>
            <!-- Dados do Cliente -->
            <GroupBox Header="Dados do Cliente" Margin="0,0,0,12">
                <Grid Margin="8,4,8,4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="Nome:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtNome" Grid.Row="0" Grid.Column="1" Margin="5,0,0,8" Style="{StaticResource AccentTextBoxStyle}" Width="200"/>
                    <Label Grid.Row="0" Grid.Column="2" Content="Celular:" VerticalAlignment="Center"/>
                    <TextBox x:Name="txtCelular" Grid.Row="0" Grid.Column="3" Margin="5,0,0,8" Width="140" Style="{StaticResource AccentTextBoxStyle}"/>
                </Grid>
            </GroupBox>

            <!-- Histórico -->
            <GroupBox Header="Histórico" Margin="0,0,0,12" Width="498" Height="300">
                <DataGrid x:Name="grdHistorico"
                          AutoGenerateColumns="True"
                          FontSize="14"
                          HeadersVisibility="Column"
                          AlternatingRowBackground="{StaticResource AlternateRowBrush}"
                          RowHeight="30"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          SelectionMode="Single"
                          GridLinesVisibility="Horizontal"
                          Margin="8,4,8,4"
                          MinHeight="200"/>
            </GroupBox>

            <!-- Rodapé -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Label Content="Total Devido:" VerticalAlignment="Center"/>
                <TextBox x:Name="txtTotalDev" Width="120" Margin="5,0,0,0" Style="{StaticResource AccentTextBoxStyle}"/>
                <Button x:Name="btnGeraCobranca" Content="Gerar Cobrança" MinWidth="120" Margin="8,0,0,0" Click="btnGeraCobranca_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
